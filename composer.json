{
  "name": "appkweb/ttc-common",
  "description": "TTC common lib",
  "type": "library",
  "license": "private",
  "authors": [
    {
      "name": "Valentin REGNIER",
      "email": "vregnier@appkweb.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "Appkweb\\Uuid\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Appkweb\\Uuid\\Tests\\": "tests"
    }
  },
  "require": {
    "php": "^8.1"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.2",
    "phpstan/phpstan": "^1.8",
    "phpunit/phpunit": "^9.5"
  },
  "config": {
    "preferred-install": "dist",
    "sort-packages": true,
    "optimize-autoloader": true
  },
  "scripts": {
    "phpunit": "vendor/bin/phpunit",
    "phpstan": "vendor/bin/phpstan",
    "php-cs-fixer": "vendor/bin/php-cs-fixer fix ./ -v",
    "php-cs-fixer-check": "vendor/bin/php-cs-fixer fix ./ --dry-run -v"
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}